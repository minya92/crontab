#!/bin/sh 
name="$1"
cd /var/cronatb/apps/"$name"/
git log -1 > ../../logs/"$name"_before.txt
git fetch origin
git pull
git log -1 > ../../logs/"$name"_after.txt
cd ../../logs
commit=$(grep -f "$name"_before.txt "$name"_after.txt -o | grep 'commit' -o)
T=$(date +%H:%M:%S)
if [ "$commit" = "commit" ]
then
	state=$(/usr/bin/screen -ls|grep "$name" -o)
	if [ "$state" = "$name" ]
	then
		echo "$T Running" >> /var/cronatb/logs/"$name".log
	else
		echo "$T The server is turned off. Restarting" >> /var/cronatb/logs/"$name".log
		/usr/bin/screen -S "$name" -d -m /var/cronatb/bin/"$name"-start
	fi
else
	echo "$T New commit. Restarting" >> /var/cronatb/logs/"$name".log
	/usr/bin/screen -X -S "$name" quit
	/usr/bin/screen -S "$name" -d -m /var/cronatb/bin/"$name"-start
fi